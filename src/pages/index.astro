---
import Layout from '../layouts/Layout.astro';
import PlotFigure from '../components/PlotFigure.astro';
import * as Plot from "@observablehq/plot";
import penguins from '../assets/penguins.json';
import meteo from '../assets/meteo.json';
import cars from '../assets/cars.json';
import pizza from '../assets/pizza.json';
import olympians from '../assets/olympians.json';
---

<Layout>
  <h1>TP1 - Dev Pracht</h1>
  <section>
	<header>
		<h2>Graphique de manchots (longueur nageoire, longeur bec)</h2>
	</header>
	 <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {x: 'culmen_length_mm', y: 'flipper_length_mm', fill: 'species'}),
      ],
    }}
  />
  </section> 

  <section>
	<header>
		<h2>Graphique méteo (précipitation, wind)</h2>
	</header>
	<PlotFigure
	options={{
		marks: [
			Plot.dot(meteo, {x: 'wind', y: 'precipitation', fill: 'weather'}),
		],
	}}
	/>
  </section>

  <section>
	<header>
		<h2>Graphique de voitures (poids, puissance)</h2>
	</header>
	<PlotFigure
	options={{
		marks: [
			Plot.dot(cars, {x: 'power (hp)', y: 'weight (lb)', fill: 'name'}),
		],
	}}
	/>
  </section>

  <section>
	<header>
		<h2>Graphique de commandes de pizzas (commandes, prix)</h2>
	</header>
	<PlotFigure
	options={{
		marks: [
			Plot.dot(pizza, {x: 'price', y: 'orders', fill: 'name'}),
		],
	}}
	/>
  </section>

  <section>
	<header>
		<h2>Analyse Olympians (taille, poids)</h2>
	</header>
	<PlotFigure
	options={{
		marks: [
			Plot.dot(olympians, {x: 'weight', y: 'height', fill: 'sex'}),
		],
	}}
	/>
  </section>
</Layout>
